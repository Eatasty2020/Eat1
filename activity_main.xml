<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center|center_horizontal"
        android:text="@string/tituloApp"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgPrincipal"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:src="@drawable/prueba" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="@string/subtitulo"
        android:textSize="18sp" />

    <Button
        android:id="@+id/botonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ovalodisp"
        android:onClick="Login"
        android:text="@string/botonLogin"
        android:textSize="24sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/botonEventos1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ovalodisp"
        android:onClick="Evento"
        android:text="@string/botonEventos"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center|center_horizontal"
        android:text="@string/ProBit"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Conectar">



    <TextView
        android:id="@+id/titConectar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/tituloConectar"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonLugares"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:background="@color/colorPrimary"
        android:text="@string/botonLugares"
        app:layout_constraintStart_toStartOf="@+id/titConectar"
        app:layout_constraintTop_toBottomOf="@+id/titConectar" />

    <Button
        android:id="@+id/botonProductos"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="@string/botonProductos"
        app:layout_constraintStart_toStartOf="@+id/botonLugares"
        app:layout_constraintTop_toBottomOf="@+id/botonLugares" />

    <Button
        android:id="@+id/botonRecetas"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="@string/botonRecetas"
        app:layout_constraintStart_toStartOf="@+id/botonProductos"
        app:layout_constraintTop_toBottomOf="@+id/botonProductos" />

    <Button
        android:id="@+id/botonCursos"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="@string/botonCursos"
        app:layout_constraintStart_toStartOf="@+id/botonRecetas"
        app:layout_constraintTop_toBottomOf="@+id/botonRecetas" />

    <Button
        android:id="@+id/botonEventos2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="@string/botonEventos2"
        app:layout_constraintStart_toStartOf="@+id/botonCursos"
        app:layout_constraintTop_toBottomOf="@+id/botonCursos" />

    <Button
        android:id="@+id/botonAcercade"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="@string/botonAcercade"
        app:layout_constraintStart_toStartOf="@+id/botonEventos2"
        app:layout_constraintTop_toBottomOf="@+id/botonEventos2" />

</androidx.constraintlayout.widget.ConstraintLayout>